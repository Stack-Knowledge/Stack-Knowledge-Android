<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/shopFragment">

    <fragment
        tools:layout="@layout/fragment_shop"
        android:id="@+id/homeFragment"
        android:name="com.kdn.stack_knowledge_android.ui.shop.ShopFragment"
        android:label="ShopFragment" >
        <action
            android:id="@+id/action_homeFragment_to_missionFragment2"
            app:destination="@id/missionFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:name="com.kdn.stack_knowledge_android.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_missionFragment2"
            app:destination="@id/missionFragment2" />
    </fragment>
    <fragment
        android:id="@+id/missionFragment2"
        android:name="com.kdn.stack_knowledge_android.ui.mission.MissionFragment"
        android:label="MissionFragment" >
        <action
            android:id="@+id/action_missionFragment2_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_missionFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>