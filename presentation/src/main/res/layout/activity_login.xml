<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_ic_background_t_b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4384" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_ic_background_b_t"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6955" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_ic_background_b_s"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2103"/>

    <View
        android:id="@+id/v_ic_background_t"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/ic_login_background_t"
        app:layout_constraintBottom_toBottomOf="@id/g_ic_background_t_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_ic_background_b"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/ic_login_background_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/g_ic_background_b_t"
        app:layout_constraintStart_toStartOf="@id/g_ic_background_b_s"/>
</androidx.constraintlayout.widget.ConstraintLayout>