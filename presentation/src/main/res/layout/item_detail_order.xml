<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="328dp"
        android:layout_height="61dp"
        android:background="@drawable/bg_detail_order">

        <TextView
            android:id="@+id/tv_detail_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="외출권"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="1,000"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_goods_name" />

        <TextView
            android:id="@+id/tv_detail_goods_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="M"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tv_detail_goods_price"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_goods_name" />

        <View
            android:id="@+id/v_control_button_bg"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_marginStart="251dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_control_button_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/v_plus"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ic_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/v_control_button_bg" />

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="1"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/v_plus" />

        <View
            android:id="@+id/v_minus"
            android:layout_width="11dp"
            android:layout_height="1dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_goods_count" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>